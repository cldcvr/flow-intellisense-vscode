{
  "f-button": {
    "title": "Button",
    "description": "Buttons allow users to perform an action.",
    "docLink": "https://docs.google.com/document/d/1jwpo28kx61ybL3AOVzD2XaJ-aogZSThCTHtFWeqqMp8/edit?usp=sharing",
    "category": "atoms",
    "attributes": {
      "variant": {
        "description": "Variants are various representations of a button.",
        "isRequired": false,
        "type": "string",
        "default": "round",
        "values": {
          "round": {
            "description": "Button with rounded corners."
          },
          "curved": {
            "description": "Button with curved corners."
          },
          "block": {
            "description": "Button with straight corners."
          }
        }
      },
      "category": {
        "description": "Change the style of the button.",
        "isRequired": false,
        "type": "string",
        "default": "fill",
        "values": {
          "fill": {
            "description": "The entire button is filled with a color."
          },
          "outline": {
            "description": "Border around the button with no color fill."
          },
          "transparent": {
            "description": "No fill or border. Note: standard button padding will remain. Use f-text for a href/link "
          }
        }
      },
      "size": {
        "description": "Size of the button",
        "isRequired": false,
        "type": "string",
        "default": "medium",
        "values": {
          "large": { "description": "large" },
          "medium": { "description": "medium" },
          "small": { "description": "small" },
          "x-small": { "description": "x-small" }
        }
      },
      "state": {
        "description": "Indicate various degrees of emphasis of the action.",
        "isRequired": false,
        "type": "string",
        "default": "primary",
        "values": {
          "primary": {
            "description": "Strong emphasis. Reserved for essential actions."
          },
          "success": {
            "description": "Indicating success and positive results."
          },
          "danger": {
            "description": "Distructive actions and negative consequences. Eg: Delete, Remove, Destroy"
          },
          "warning": {
            "description": "To indicate discouragement. Not always distructive."
          },
          "subtle": {
            "description": "Actions with little prominence"
          }
        }
      },
      "label": {
        "description": "Displays content on the button.",
        "isRequired": true,
        "type": "string",
        "default": null
      },
      "counter": {
        "description": "Displays a counter on the button.",
        "isRequired": false,
        "type": "string",
        "default": null
      },
      "icon-left": {
        "description": "Icon on the left of label.",
        "isRequired": false,
        "type": "string",
        "default": null
      },
      "icon-right": {
        "description": "Icon on the right of label.",
        "isRequired": false,
        "type": "string",
        "default": null
      },
      "loading": {
        "type": "boolean",
        "description": "Displays a loading state. Loader replaces the content.",
        "isRequired": false,
        "default": false
      },
      "disabled": {
        "type": "boolean",
        "description": "Displays a disabled state.",
        "isRequired": false,
        "default": false
      },
      "tooltip": {
        "description": "Displays the focus state.",
        "isRequired": false,
        "type": "string",
        "default": null
      }
    }
  }
}
