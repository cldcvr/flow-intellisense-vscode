{
  "f-icon-button": {
    "title": "Icon Button",
    "description": "Icon only button",
    "docLink": "https://docs.google.com/document/d/19XQndhgIxu-66oJ1QFZ4_k32keuRczxQthRtIENWmYk/edit?usp=sharing",
    "category": "atoms",
    "attributes": {
      "variant": {
        "description": "Variants are various representations of a button.",
        "isRequired": false,
        "type": "string",
        "default": "round",
        "values": {
          "round": {
            "description": "Full round button."
          },
          "curved": {
            "description": "Button with curved corners."
          },
          "block": {
            "description": "Button with straight corners."
          }
        }
      },
      "type": {
        "description": "Change the style of the button.",
        "isRequired": false,
        "type": "string",
        "default": "fill",
        "values": {
          "fill": {
            "description": "The entire button is filled with a color."
          },
          "outline": {
            "description": "Border around the button with no color fill."
          },
          "transparent": {
            "description": "No fill or border. Note: standard button padding will remain. Use f-text for a href/link "
          },
          "packed": {
            "description": "Disaply without padding"
          }
        }
      },
      "size": {
        "description": "Size of the button",
        "isRequired": false,
        "type": "string",
        "default": "medium",
        "values": {
          "large": {
            "description": "large"
          },
          "medium": { "description": "medium" },
          "small": { "description": "small" },
          "x-small": { "description": "x-small" }
        }
      },
      "state": {
        "description": "Indicate various degrees of emphasis of the action.",
        "isRequired": false,
        "type": "string",
        "default": "primary",
        "values": {
          "primary": {
            "description": "Strong emphasis. Reserved for essential actions."
          },
          "success": {
            "description": "Indicating success and positive results."
          },
          "danger": {
            "description": "Distructive actions and negative consequences. Eg: Delete, Remove, Destroy"
          },
          "warning": {
            "description": "To indicate discouragement. Not always distructive."
          },
          "neutral": {
            "description": "Actions with little prominence"
          },
          "inherit": {
            "description": "Inherits the parent state"
          }
        }
      },
      "icon": {
        "description": "Icon name to disply.",
        "isRequired": true,
        "type": "string",
        "default": null
      },
      "loading": {
        "type": "boolean",
        "description": "Displays a loading state. Loader replaces the content.",
        "isRequired": false,
        "default": false
      },
      "disabled": {
        "type": "boolean",
        "description": "Displays a disabled state.",
        "isRequired": false,
        "default": false
      },

      "tooltip": {
        "description": "Displays the focus state.",
        "isRequired": false,
        "type": "string",
        "default": null
      },
      "counter": {
        "description": "Displays a counter on the button.",
        "isRequired": false,
        "type": "string",
        "default": null
      }
    }
  }
}
